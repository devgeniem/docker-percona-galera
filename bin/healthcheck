#!/bin/bash
#
# This script is designed to be run inside the container
#

# set debug based on envvar
[[ -n $DEBUG ]] && set -x

DIR=$(dirname $0)

# functions
. $DIR/functions

# wait for the service to become available
while ! ss -l -n -t | grep :3306 > /dev/null; do sleep 1; done

# while the port is listening, publish to etcd
while ss -l -n -t | grep :3306 > /dev/null; do
  if [[ -n $NO_REGISTRATOR ]] && [[ -n $ETCD ]]; then
    publish_to_etcd
  fi
  sleep $(($TTL/2)) # sleep for half the TTL
done

kill 1
